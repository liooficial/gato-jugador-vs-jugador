<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/purple_200"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="30sp"
        >
        <Button
            android:id="@+id/bt1"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt2"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt3"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="30sp"
        >
        <Button
            android:id="@+id/bt4"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt5"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt6"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_marginTop="30sp"
        >
        <Button
            android:id="@+id/bt7"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt8"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
        <Button
            android:id="@+id/bt9"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_margin="10sp"
            android:text=""
            android:textSize="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jugador 1:"
            android:layout_marginLeft="15px"
            android:layout_margin="10px"
            android:textSize="55px"
            android:textColor="@color/white"
        />
        <EditText
            android:id="@+id/juagador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15px"
            android:textColor="@color/black"
            android:text="     "
            android:background="@color/white">
        </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jugador 2:"
            android:textSize="55px"
            android:layout_margin="10px"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/jugador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="     "
            android:padding="15px"
            android:background="@color/white">
        </EditText>
        </LinearLayout>
        <TextView
            android:id="@+id/ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ganador:"
            android:textSize="55px"
            android:layout_margin="10px"
            android:textColor="@color/white"/>

        <TextView
        android:id="@+id/ma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="55px"
        android:layout_margin="10px"
        android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>